{
    "manifest_version": 2,

    "name": "Tab",
    "description": "Tab",
    "version": "1.0",

    "__browser_action": {
      "default_icon": "icon.png"
    },

    "__content_scripts": [
        {
        "matches": ["<all_urls>"],
		"css": ["box.css"],
        "js" : ["content.js"]
    }
    ],

    "permissions":
    [
        "activeTab",
        "background",
        "sessions",
        "tabs", "storage", "signedInDevices", "processes",
        "http://*/*",
        "https://*/*"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "web_accessible_resources": [
        "popup.html"
    ]
}
